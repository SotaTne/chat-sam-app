{
  "Comment": "A state machine that count posts",
  "StartAt": "CountPosts",
  "States": {
    "CountPosts": {
      "Type": "Task",
      "Resource": "${CollectFuncArn}",
      "Retry": [
        {
          "ErrorEquals": ["States.TaskFailed"],
          "IntervalSeconds": 15,
          "MaxAttempts": 2,
          "BackoffRate": 1.5
        }
      ],
      "End": true
    }
  }
}
